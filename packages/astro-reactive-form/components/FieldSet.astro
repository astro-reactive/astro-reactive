---
import type { FormGroup } from '../core/form-group';
import Field from './Field.astro';

export interface Props {
	group: FormGroup;
}

const { group } = Astro.props;
---

<fieldset>
	{group.name && <legend>{group.name}</legend>}
	{group?.controls?.map((control) => <Field control={control} />)}
</fieldset>
