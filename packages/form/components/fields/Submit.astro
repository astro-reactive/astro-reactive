---
import Field from '../Field.astro';
import { FormControl } from '../../core';

export interface Props {
    control?: FormControl
    controlName?: string
    showValidationHints?: boolean 
}

const { control, controlName, showValidationHints = false } = Astro.props;

const controlSubmit: FormControl = new FormControl({
    ...control?.copy(),
    type: "submit",
    name: controlName ?? control?.name ?? "",
})
---

<Field showValidationHints={showValidationHints} control={controlSubmit}/>